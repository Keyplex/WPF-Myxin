<Page x:Class="Первый_проект.Программа.LogPar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Первый_проект.Программа"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogPar">

    <Grid>
        <GroupBox Header="Регистрация">
            <StackPanel>
                <GroupBox Header="Введите логин">
                    <TextBox Name="txtLogin"/>
                </GroupBox>
                <GroupBox Header="Введите пароль">
                    <PasswordBox Name="txtPasswor"/>
                </GroupBox>
                <Button Background="Red" Content="Подтвердить" Name="btnAuth"  Click="btnAuth_Click" IsDefault="True"/>
                <Button Background="PaleVioletRed" Content="Регистрация" Name="btnReg"  Click="btnReg_Click"/>
                <Button Background="Gold" Content="Таблица" Name="PageUrersList" Click="PageUrersList_Click"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
